<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>  </dd>
  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_actor.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<h2> Filmography </h2>

<table border="1">

  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

      <th>
      Director
    </th>

    <th>
      Character Name
    </th>

    <th>
    </th>
  </tr>

  <% @character.each do |a_character| %>

  <tr>

    <td>
    <% movie_id = a_character.movie_id %>
   <%= Movie.where({:id => movie_id}).at(0).title %>
    </td>
  
    <td>
    <%= Movie.where({:id => movie_id}).at(0).year %>
    </td>

    <td>
        <% director_id = Movie.where({:id => movie_id}).at(0).director_id %>
        <%=  Director.where({:id => director_id}).at(0).name %>

     </td>

    <td>
   <%= a_character.name %>
    </td>

      <td>
   <a href ="/movies/<%= movie_id %>"> Show details </a>
    </td>

  </tr>
  <%end%>
</table>